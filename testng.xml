<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="SuiteCrowdarSwagLabs on Chrome">
	<parameter name="URL" value="https://www.saucedemo.com/" />
	
	<test name="Test_login_Chrome">
		<parameter name="BrowserType" value="Chrome" />
		<classes>
			<class name="com.record.crowdar.TestLogin" />
		</classes>
	</test> <!-- Test -->
	<test name="Test_logout_Chrome">
		<parameter name="BrowserType" value="Chrome" />
		<classes>
			<class name="com.record.crowdar.TestLogout" />
		</classes>
	</test> <!-- Test -->
	<test name="Test_login_failed_Chrome">
		<parameter name="BrowserType" value="Chrome" />
		<classes>
			<class name="com.record.crowdar.TestLoginFailed" />
		</classes>
	</test> <!-- Test -->
	<test name="Test_comprar_item_Chrome">
		<parameter name="BrowserType" value="Chrome" />
		<classes>
			<class name="com.record.crowdar.TestComprar" />
		</classes>
	</test> <!-- Test -->
	
	
	<test name="Test_login_Firefox">
		<parameter name="BrowserType" value="Firefox" />
		<classes>
			<class name="com.record.crowdar.TestLogin" />
		</classes>
	</test> <!-- Test -->
	<test name="Test_logout_Firefox">
		<parameter name="BrowserType" value="Firefox" />
		<classes>
			<class name="com.record.crowdar.TestLogout" />
		</classes>
	</test> <!-- Test -->
	<test name="Test_login_failed_Firefox">
		<parameter name="BrowserType" value="Firefox" />
		<classes>
			<class name="com.record.crowdar.TestLoginFailed" />
		</classes>
	</test> <!-- Test -->
	<test name="Test_comprar_item_Firefox">
		<parameter name="BrowserType" value="Firefox" />
		<classes>
			<class name="com.record.crowdar.TestComprar" />
		</classes>
	</test> <!-- Test -->

</suite> <!-- SuiteCrowdarSwagLabs -->

